<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9eff85af">


    <Button
        android:id="@+id/silent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/ic_lock_silent_mode"
        android:elevation="100dp"
        android:fontFamily="casual"
        android:textAllCaps="false"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="205dp" />

    <Button
        android:id="@+id/click_Start"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_above="@+id/restart"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:background="@drawable/roundbutton"
        android:elevation="100dp"
        android:fontFamily="casual"
        android:text="Click"
        android:textAllCaps="false"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="205dp" />

    <ImageView
        android:id="@+id/shop"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/time"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:transitionName="imageTransision"
        app:srcCompat="@mipmap/untitled" />

    <ImageView
        android:id="@+id/Highlist"
        android:layout_width="50dp"
        android:transitionName="imageTransision2"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/shop"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        app:srcCompat="@mipmap/untitled_2" />

    <TextView
        android:id="@+id/Number_final"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/shop"
        android:fontFamily="casual"
        android:transitionName="imageTransision2"
        android:text="0"
        android:textAlignment="center"
        android:textSize="100sp" />

    <TextView
        android:id="@+id/restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:text="Restart"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Number_final"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="1#"
        android:textSize="30sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/restart"
        android:layout_below="@+id/Number_final"
        android:text="Name"
        android:textSize="30sp" />

</RelativeLayout>
